<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
              android:layout_width="match_parent" android:layout_height="match_parent"
              >


    <com.tarena.app.views.CircleImageView
        android:id="@+id/item_iv_head"
        android:layout_width="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="#ffffff"

        android:layout_height="50dp" />


    <TextView
        android:id="@+id/item_tv_nickname"
        android:textColor="#000000"
        android:text=""
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/item_iv_head"
        android:layout_toRightOf="@+id/item_iv_head"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/item_tv_time"
        android:layout_below="@+id/item_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/item_iv_head"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="9dp"
        android:textSize="14sp"
        android:textColor="#6E6E6E"

        android:text=""
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/lin"
        android:layout_below="@+id/item_tv_time"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:background="#EEEEEE"
        android:layout_marginLeft="20dp"
        android:layout_height="0.5dp" />

    <TextView
        android:id="@+id/item_tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="#070707"
        android:layout_below="@+id/lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_tv_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textSize="18sp"
        android:textColor="#A1A1A1"
        android:text=""
        android:layout_below="@+id/item_tv_title"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@+id/item_tv_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
         android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imagesLayout">

    </RelativeLayout>
</RelativeLayout>