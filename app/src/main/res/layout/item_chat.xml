<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >


    <com.tarena.app.views.CircleImageView
        android:id="@+id/item_iv_chat_head"
        android:layout_width="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"

        android:layout_height="50dp" />


    <TextView
        android:id="@+id/item_tv_chat_content"
        android:textColor="#000000"
        android:text="sdfdsfsdfdsfsdf"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/item_iv_chat_head"
        android:layout_toLeftOf="@+id/item_iv_chat_head"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <RelativeLayout
        android:layout_alignTop="@+id/item_iv_chat_head"
        android:layout_toLeftOf="@+id/item_iv_chat_head"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ff00"
        android:id="@+id/lv_imagesLayout">

    </RelativeLayout>




</RelativeLayout>