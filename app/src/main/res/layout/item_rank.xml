<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tarena.app.views.CircleImageView
        android:id="@+id/item_cm"
        android:layout_width="27dp"
        android:layout_marginLeft="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_my_default_head"
        android:layout_marginTop="8dp"
        android:layout_height="27dp" />

    <TextView
        android:id="@+id/item_rank_nick"
        android:layout_toRightOf="@+id/item_cm"
        android:text="isa"
        android:layout_alignTop="@+id/item_cm"
        android:textSize="13sp"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_tv_rank"
        android:layout_toRightOf="@+id/item_cm"
        android:layout_below="@+id/item_rank_nick"
        android:text="第1名"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/round_rank_1st"
        android:layout_width="50dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_tv_score"
        android:layout_below="@+id/item_tv_rank"
        android:layout_alignParentRight="true"
        android:textColor="#776C65"
        android:text="656"
        android:textSize="11sp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    

    <TextView
        android:id="@+id/lin"
        android:layout_below="@+id/item_tv_score"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/item_rank_nick"
        android:background="#A9A7A6"
        android:layout_height="0.5dp" />

</RelativeLayout>