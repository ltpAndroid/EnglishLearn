<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.classeslist.AddStudentActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:background="#F6F6F6">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_mid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_left"

            android:gravity="center"
            android:text="学生列表"
            android:textColor="#007AFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#007AFF"
            android:textSize="14sp"
            android:text="Save" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#D9D9D9" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:background="@drawable/bg_welcome">

        <ImageView
            android:id="@+id/iv_student_head"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_my_default_head" />


        <LinearLayout
            android:id="@+id/ll_username"
            android:layout_width="match_parent"
            android:layout_marginTop="17dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_student_head"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:text="用户名"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/roundcorner_bg_et_addstudent"
                android:paddingLeft="8dp"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_username"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:text="昵称"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_nickname"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/roundcorner_bg_et_addstudent"
                android:paddingLeft="8dp"
                android:textSize="11sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_nickname"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:text="密码"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="200dp"
                android:text="12345678"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/roundcorner_bg_et_addstudent"
                android:paddingLeft="8dp"
                android:textSize="11sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_password"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:text="积分"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_score"
                android:layout_width="200dp"
                android:text="0"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/roundcorner_bg_et_addstudent"
                android:paddingLeft="8dp"
                android:textSize="11sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_score"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:text="金币"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_money"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:text="0"
                android:background="@drawable/roundcorner_bg_et_addstudent"
                android:paddingLeft="8dp"
                android:textSize="11sp" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
