<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.tarena.app.views.CircleImageView
        android:id="@+id/item_cm_student_head"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="3dp" />


    <TextView
        android:id="@+id/item_tv_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_cm_student_head"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/item_cm_student_head"
        android:textColor="#212121"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/item_tv_student_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_tv_student_name"
        android:layout_below="@+id/item_tv_student_name"
        android:layout_marginTop="5dp"
        android:textColor="#D1D1D1"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/item_tv_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@+id/item_cm_student_head"
        android:layout_below="@+id/item_cm_student_head"
        android:layout_marginTop="5dp"
        android:background="#C8C7CC" />


    <ImageView
        android:id="@+id/item_iv_right_arr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_arr_right" />


    <TextView
        android:id="@+id/item_tv_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_tv_line"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="46dp"
        android:layout_toLeftOf="@+id/item_iv_right_arr"
        android:text="积分:0"
        android:textColor="#000000"
        android:textSize="11sp" />


    <TextView
        android:id="@+id/item_tv_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_tv_line"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="44dp"
        android:layout_toLeftOf="@+id/item_tv_points"
        android:text="金币:0"
        android:textColor="#000000"
        android:textSize="11sp" />
</RelativeLayout>